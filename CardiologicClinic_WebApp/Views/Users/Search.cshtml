@model IEnumerable<CardiologicClinic_WebApp.Models.ApplicationUser>

@{
    ViewData["Title"] = "Wynik wyszukiwania użytkownika";
}

<h2>Wyniki wyszukiwania:</h2>

<div>
    <a href='javascript:history.go(-1)'>Powrót do listy użytkowników</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserSurname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserSurname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                <a asp-controller="Users" asp-action="Edit" asp-route-id="@item.Id">Edytuj</a> |
                <a asp-controller="Users" asp-action="Details" asp-route-id="@item.Id">Szczegóły</a> |
                <a asp-controller="Users" asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
            </td>
        </tr>
        }
    </tbody>
</table>
