@model IEnumerable<CardiologicClinic_WebApp.Models.Visit>
@using CardiologicClinic_WebApp.Areas.Identity.Services;
@using Microsoft.AspNetCore.Identity;
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Wizyty";
    VisitService vs = new VisitService();
    var user = await UserManager.GetUserAsync(User);
}

<h2>Wizyty</h2>

<p>
    <a asp-action="Create">Stwórz nową wizytę</a>
</p>

<form>
    <div class="form-actions no-color">
        <p>
            Wyszukaj pacjenta po nazwisku lub imieniu: <input type="text" name="SearchString" value="@ViewData["currentFilter"]" />
            <input asp-action="Search" method="get" type="submit" value="Szukaj" class="btn btn-default" /> |
            <a asp-page="/Index">Wróć do pełnej listy wizyt</a>
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                Pacjent
            </th>
            <th>
                Lekarz
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VisitDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VisitName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            @if (UserManager.IsInRoleAsync(user, "Doctor").Result || UserManager.IsInRoleAsync(user, "Admin").Result)
            {
                if (UserManager.IsInRoleAsync(user, "Doctor").Result)
                {
                    if (user.Id == item.IdDoctor)
                    {//doctors can watch only theirs patients
                    <tr>
                        <td>
                            @vs.GetSpecificUser(item.IdPatient)
                        </td>
                        <td>
                            @vs.GetSpecificUser(item.IdDoctor)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.VisitDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.VisitName)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edycja</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Szczegóły</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
                        </td>
                    </tr>
                    }
                }
                else
                {
                    <tr>
                        <td>
                            @vs.GetSpecificUser(item.IdPatient)
                        </td>
                        <td>
                            @vs.GetSpecificUser(item.IdDoctor)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.VisitDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.VisitName)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edycja</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Szczegóły</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
                        </td>
                    </tr>
                }
            }
        }
    </tbody>
</table>
<div>
    <a href="/Identity/Account/Manage">Powrót do menu</a>
</div>
