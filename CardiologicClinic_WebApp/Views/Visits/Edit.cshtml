@model CardiologicClinic_WebApp.Models.Visit
@using Microsoft.AspNetCore.Identity;
@using CardiologicClinic_WebApp.Areas.Identity.Services
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Edycja wizyty";
    var user = await UserManager.GetUserAsync(User);
    VisitService vs = new VisitService();
    await vs.GetUsers(UserManager);
}

<h2>Edytuj wizytę</h2>

<h4>Wizyta:</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="IdPatient" class="control-label"></label>
                <select asp-for="IdPatient" asp-items="VisitService.Patients"></select>
                <span asp-validation-for="IdPatient" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdDoctor" class="control-label"></label>
                <select asp-for="IdDoctor" asp-items="VisitService.Doctors"></select>
                <span asp-validation-for="IdDoctor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VisitDate" class="control-label"></label>
                <input asp-for="VisitDate" class="form-control" />
                <span asp-validation-for="VisitDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VisitName" class="control-label"></label>
                <input asp-for="VisitName" class="form-control" />
                <span asp-validation-for="VisitName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VisitNote" class="control-label"></label>
                <textarea asp-for="VisitNote" class="form-control" text-wrap:normal" type="text" placeholder="Pole na notatke dotyczącą wizyty"></textarea>
                <span asp-validation-for="VisitNote" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Powrót do listy wizyt</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
