<style>
    .history {
        background-color: #A6A4A3;
    }

    /* The actual timeline (the vertical ruler) */
    .timelineT {
        margin-top: 40px;
        position: relative;
        max-width: 1200px;
    }

        /* The actual timeline (the vertical ruler) */
        .timelineT::after {
            content: '';
            position: absolute;
            width: 6px;
            background-color: white;
            top: 0;
            bottom: 0;
            left: 50%;
        }

    /* Container around content */
    .containerT {
        padding: 10px 40px;
        position: relative;
        background-color: inherit;
    }

        /* The circles on the timeline */
        .containerT::after {
            content: '';
            position: absolute;
            width: 25px;
            height: 25px;
            right: -17px;
            background-color: white;
            border: 4px solid #FF9F55;
            top: 15px;
            border-radius: 50%;
            z-index: 1;
            left: 97.6%;
        }

    /* Place the container to the left */
    .leftT {
        right: 95.1%;
    }

    /* Place the container to the right */
    .rightT {
        left: 50.3%;
    }
        /* Fix the circle for containers on the right side */
        .rightT::after {
            left: -16px;
        }

    /* The actual content */
    .contentT {
        padding: 20px 30px;
        background-color: white;
        position: relative;
        border-radius: 6px;
        font-size: 12px;
        max-width: 450px;
        left: 8.3%;
    }
    /* The actual content */
    .contentTR {
        padding: 20px 30px;
        background-color: white;
        position: relative;
        border-radius: 6px;
        font-size: 12px;
        max-width: 450px;
        right: -0.1%;
    }
    }
</style>
